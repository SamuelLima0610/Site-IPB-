<%- include ('../partials/header.ejs') %>
<%- include('../partials/navbarAuth.ejs') %>
<div class="contact-form section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading">
                    <br>
                    <h2>Categoria</h2>
                    <p>Listagem das categorias de avisos</p>
                    <hr>
                    <a href="/admin/categoria/adicionar" type="submit" class="btn crose-btn">Adicionar Categoria</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-condensed">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="text-align: center;">Id</th>
                    <th scope="col" style="text-align: center;">Titulo</th>
                    <th scope="col" style="text-align: center;">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td scope="row" style="text-align: center;"><%= category.id%></td>
                        <td style="text-align: center;"><%= category.title%></td>
                        <td>
                            <a href="/admin/categoria/editar/<%= category.id%>" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                            <form action="/categoria/excluir" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="<%= category.id%>">
                                <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
        <div class="row">
            <!--Navegation-->
            <div class="col-12">
                <div class="pagination-area mt-70 mb-100">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <% if(pages[0]){%>
                                <li class="page-item"><a class="page-link" href="/admin/categoria/<%= page-1%>"><i class="fa fa-angle-left"></i></a></li>
                            <%}%>
                            <li class="page-item active"><a class="page-link" href="/admin/categoria/<%= page%>"><%= page%></a></li>
                            <% if(pages[1]){ %>
                                <li class="page-item"><a class="page-link" href="/admin/categoria/<%= page+1 %>"><%= page+1 %></a></li>
                            <%}%>
                            <% if(pages[2]){ %>
                                <li class="page-item"><a class="page-link" href="/admin/categoria/<%= page+2 %>"><%= page+2 %></a></li>
                            <%}%>
                            <% if(pages[3]){%>
                                <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                            <%}%>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
<%- include('../partials/navbarAuth.ejs') %>
<!-- ##### Add Sermon Form Area Start ##### -->
<div class="contact-form section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading">
                    <br>
                    <h2>Boletin</h2>
                    <p>Cadastro de boletin</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Contact Form Area -->
                <div class="contact-form-area">
                    <form action="/boletins/salvar" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label for="contact-email">Data:</label>
                                    <input type="date" class="form-control" id="contact-email" name="date">
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label for="contact-number">Boletin:</label>
                                    <input type="file" class="form-control" name="file">
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn crose-btn mt-15">Submeter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Add Sermon Form Area End ##### -->

<%- include ('../partials/header.ejs') %>
<%- include('../partials/navbarAuth.ejs') %>

<!-- ##### Add Sermon Form Area Start ##### -->
<div class="contact-form section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading">
                    <br>
                    <h2>Sermão</h2>
                    <p>Editagem do sermão</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Contact Form Area -->
                <div class="contact-form-area">
                    <form action="/sermao/mudar" method="post">
                        <div class="row">
                            <%if(sermao.audio != null){%>
                                <input type="hidden" value="<%= sermao.title%>" name="titleOld">
                            <%}else{%>
                                <input type="hidden" value="sem" name="titleOld">
                            <%}%>
                            <input type="hidden" value="<%= sermao.id%>" name="id">
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label for="contact-name">Titulo:</label>
                                    <input type="text" class="form-control" id="contact-name" placeholder="Titulo" name="title" value="<%= sermao.title%>">
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label for="contact-email">Livro:</label>
                                    <input type="text" class="form-control" id="contact-email" placeholder="Livro" name="book" value="<%= sermao.book%>">
                                </div>
                            </div>
                            <div class="col-12 col-lg-4">
                                <div class="form-group">
                                    <label for="contact-email">Pregador:</label>
                                    <input type="text" class="form-control" id="contact-email" placeholder="Pregador" name="preacher" value="<%= sermao.preacher%>">
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <label for="contact-email">Link do YouTube:</label>
                                    <input type="text" class="form-control" id="contact-email" placeholder="Link" name="link" value="<%= sermao.link%>">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="message">Resumo:</label>
                                    <textarea class="form-control" name="abstract" id="message" cols="30" rows="10" placeholder="Resumo do sermão"></textarea>
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn crose-btn mt-15">Editar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div id="content" style="display: none;">
            <%- sermao.abstract%>
        </div>
    </div>
</div>
<!-- ##### Add Sermon Form Area End ##### -->

<%- include('../partials/footer.ejs') %>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:'#message',
        activeEditor: true,
        plugins: ['advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'],
        init_instance_callback: () => {
            tinymce.get('message').setContent($('#content').html())
        }
    })
</script>
<%- include ('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %> 
<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Event</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->

<!-- ##### Events Area Start ##### -->
<div class="events-area section-padding-100">
    <div class="container">
        <div class="row">
            <!-- Event Search Form -->
            <div class="col-12">
                <div class="event-search-form mb-50">
                    <form action="/filter" method="POST">
                        <div class="row align-items-end">
                            <!--<div class="col-12 col-md">
                                <div class="form-group mb-0">
                                    <label for="eventDate">Event In</label>
                                    <input type="date" class="form-control" id="eventDate" placeholder="Event In">
                                </div>
                            </div>
                            <div class="col-12 col-md">
                                <div class="form-group mb-0">
                                    <label for="eventLocation">Near</label>
                                    <input type="text" class="form-control" id="eventLocation" placeholder="Location">
                                </div>
                            </div> -->
                            <div class="col-12 col-md">
                                <div class="form-group mb-0">
                                    <label for="eventKeyword">Aviso: </label>
                                    <select name="category" class="form-control">
                                        <%categories.forEach(category => {%>
                                            <option value="<%=category.title%>"><%=category.title%></option>
                                        <%})%>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-md-3 col-lg-2">
                                <button type="submit" class="btn crose-btn">Find Events</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Events Title -->
            <div class="col-12">
                <div class="events-title">
                    <%if(information.type == 'date'){%>
                        <h2>Eventos de <%=months[information.data.getMonth()]%>/<%=information.data.getFullYear()%></h2>
                    <%}else if(information.type == 'category'){%>
                        <h2>Eventos da <%= information.data%> </h2>
                    <%}%>
                </div>
            </div>

            <div class="col-12">
                <%notices.forEach(notice => {%>
                    <!-- Single Upcoming Events Area -->
                    <div class="single-upcoming-events-area d-flex flex-wrap align-items-center">
                        <!-- Thumbnail -->
                        <div class="upcoming-events-thumbnail">
                            <img src="<%= notice.image%>" alt="">
                        </div>
                        <!-- Content -->
                        <div class="upcoming-events-content d-flex flex-wrap align-items-center">
                            <div class="events-text">
                                <a href="/evento/<%= notice.id%>"><h4><%= notice.title%></h4></a>
                                <div class="events-meta">
                                    <a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> <%=notice.date.getDate()%>/<%=months[notice.date.getMonth()]%>/<%=notice.date.getFullYear()%></a>
                                    <a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= notice.time%></a>
                                    <!-- <a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i> 11 Rose St, Brooklyn, NY</a> -->
                                </div>
                                <a href="#">Read More <i class="fa fa-angle-double-right"></i></a>
                            </div>
                            <div class="find-out-more-btn">
                                <a href="/evento/<%= notice.id%>" class="btn crose-btn btn-2">Find Out More</a>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>

            <div class="col-12">
                <div class="pagination-area mt-70">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <%if(information.type == 'date'){%>
                                <% if(pages[0]){%>
                                    <li class="page-item"><a class="page-link" href="/eventos/<%= page-1%>"><i class="fa fa-angle-left"></i></a></li>
                                <%}%>
                                <li class="page-item active"><a class="page-link" href="/eventos/<%= page%>"><%= page%></a></li>
                                <% if(pages[1]){ %>
                                    <li class="page-item"><a class="page-link" href="/eventos/<%= page+1 %>"><%= page+1 %></a></li>
                                <%}%>
                                <% if(pages[2]){ %>
                                    <li class="page-item"><a class="page-link" href="/eventos/<%= page+2 %>"><%= page+2 %></a></li>
                                <%}%>
                                <% if(pages[3]){%>
                                    <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                                <%}%>
                            <%}else if(information.type == 'category'){%>
                                <% if(pages[0]){%>
                                    <li class="page-item"><a class="page-link" href="/eventos/categoria/<%= page-1%>"><i class="fa fa-angle-left"></i></a></li>
                                <%}%>
                                <li class="page-item active"><a class="page-link" href="/eventos/categoria/<%= page%>"><%= page%></a></li>
                                <% if(pages[1]){ %>
                                    <li class="page-item"><a class="page-link" href="/eventos/categoria/<%= page+1 %>"><%= page+1 %></a></li>
                                <%}%>
                                <% if(pages[2]){ %>
                                    <li class="page-item"><a class="page-link" href="/eventos/categoria/<%= page+2 %>"><%= page+2 %></a></li>
                                <%}%>
                                <% if(pages[3]){%>
                                    <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                                <%}%>
                            <%}%>
                            

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Events Area End ##### -->

<!-- ##### Subscribe Area Start ##### -->
<section class="subscribe-area">
    <div class="container">
        <div class="row align-items-center">
            <!-- Subscribe Text -->
            <div class="col-12 col-lg-6">
                <div class="subscribe-text">
                    <h3>Subscribe To Our Newsletter</h3>
                    <h6>Subcribe Us And Tell Us About Your Story</h6>
                </div>
            </div>
            <!-- Subscribe Form -->
            <div class="col-12 col-lg-6">
                <div class="subscribe-form text-right">
                    <form action="#">
                        <input type="email" name="subscribe-email" id="subscribeEmail" placeholder="Your Email">
                        <button type="submit" class="btn crose-btn">subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Subscribe Area End ##### -->
<%- include('./partials/footer.ejs') %>
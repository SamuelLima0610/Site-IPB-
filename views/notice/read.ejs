<%- include ('../partials/header.ejs') %>
<%- include('../partials/navbarAuth.ejs') %>
<div class="contact-form section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Section Heading -->
            <div class="col-12">
                <div class="section-heading">
                    <br>
                    <h2>Eventos</h2>
                    <p>Listagem dos eventos cadastrados!</p>
                    <hr>
                    <a href="/admin/evento/adicionar" type="submit" class="btn crose-btn">Adicionar Evento</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="text-align: center;">Id</th>
                    <th scope="col" style="text-align: center;">Titulo</th>
                    <th scope="col" style="text-align: center;">Data</th>
                    <th scope="col" style="text-align: center;">Time</th>
                    <th scope="col" style="text-align: center;">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% notices.forEach(notice => { %>
                    <tr>
                        <td style="text-align: center;"><%= notice.id%></td>
                        <td style="text-align: center;"><%= notice.title%></td>
                        <td style="text-align: center;"><%= notice.date.getDate()%>/<%= notice.date.getMonth() + 1%>/<%= notice.date.getFullYear()%></td>
                        <td style="text-align: center;"><%= notice.time%></td>
                        <td>
                            <a href="/admin/evento/editar/<%= notice.id%>" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                            <form action="/evento/excluir" method="post" style="display: inline;">
                                <input type="hidden" name="image" value="<%= notice.image%>">
                                <input type="hidden" name="title" value="<%= notice.title%>">
                                <input type="hidden" name="id" value="<%= notice.id%>">
                                <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
        <div class="row">
            <!--Navegation-->
            <div class="col-12">
                <div class="pagination-area mt-70 mb-100">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <% if(pages[0]){%>
                                <li class="page-item"><a class="page-link" href="/admin/eventos/<%= page-1%>"><i class="fa fa-angle-left"></i></a></li>
                            <%}%>
                            <li class="page-item active"><a class="page-link" href="/admin/eventos/<%= page%>"><%= page%></a></li>
                            <% if(pages[1]){ %>
                                <li class="page-item"><a class="page-link" href="/admin/eventos/<%= page+1 %>"><%= page+1 %></a></li>
                            <%}%>
                            <% if(pages[2]){ %>
                                <li class="page-item"><a class="page-link" href="/admin/eventos/<%= page+2 %>"><%= page+2 %></a></li>
                            <%}%>
                            <% if(pages[3]){%>
                                <li class="page-item"><a class="page-link" href="#"><i class="fa fa-angle-right"></i></a></li>
                            <%}%>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>